<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user %>
      <%= render 'books/list', book: @book1 %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table pd-5">
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
       <tr>
      </thead>
       <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td>caption:<%= book.body %></td>
        </tr>
        <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>